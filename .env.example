# Django
DEBUG=False
SECRET_KEY=your-production-secret-key-here
ALLOWED_HOSTS=fastclass.ru,www.fastclass.ru,api.fastclass.ru
CSRF_TRUSTED_ORIGINS=https://fastclass.ru,https://www.fastclass.ru,https://api.fastclass.ru

# Database
DB_ENGINE=django.db.backends.postgresql
DB_NAME=fastlesson_prod
DB_USER=fastlesson_user
DB_PASSWORD=strong_password_here
DB_HOST=localhost
DB_PORT=5432

# Redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379

# VK OAuth
VK_CLIENT_ID=your_vk_client_id
VK_CLIENT_SECRET=your_vk_client_secret
VK_REDIRECT_URI=https://fastclass.ru/auth/vk/callback/

# Jitsi
JITSI_APP_SECRET=your_jitsi_app_secret
JITSI_ISSUER=jitsi-issuer-in-your-jitsi-server-settings
JITSI_SUBJECT=your-jitsi-server-domain
JITSI_SCRIPT_SRC=link-to-load-jitsi-on-your-server

# Internationalization
LANGUAGE_CODE=ru-ru
TIME_ZONE=Europe/Moscow

# Security
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Docker
DOCKER_WEB_PORT=8000